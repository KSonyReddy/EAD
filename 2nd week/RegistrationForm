<body>

<form id="regForm" onsubmit="return validateForm()">
  <h2>Register</h2>

  <label for="name">Name</label>
  <input type="text" id="name" name="name" required />

  <label for="email">Email</label>
  <input type="email" id="email" name="email" required />
  <div id="emailError" class="error-msg"></div>

  <label for="password">Password</label>
  <input type="password" id="password" name="password" required autocomplete="new-password" />
  <div>
    <small id="ruleLength" class="rules">At least 6 characters</small><br/>
    <small id="ruleUpper" class="rules">At least one uppercase letter</small><br/>
    <small id="ruleSymbol" class="rules">At least one symbol (!@#$ etc.)</small>
  </div>

  <label for="confirmPassword">Confirm Password</label>
  <input type="password" id="confirmPassword" name="confirmPassword" required autocomplete="new-password" />
  <div id="confirmError" class="error-msg"></div>

  <button type="submit">Register</button>
</form>

<script>
  const emailInput = document.getElementById('email');
  const emailError = document.getElementById('emailError');

  const passwordInput = document.getElementById('password');
  const confirmPasswordInput = document.getElementById('confirmPassword');
  const confirmError = document.getElementById('confirmError');

  const ruleLength = document.getElementById('ruleLength');
  const ruleUpper = document.getElementById('ruleUpper');
  const ruleSymbol = document.getElementById('ruleSymbol');

  passwordInput.addEventListener('input', () => {
    const pwd = passwordInput.value;
    ruleLength.classList.toggle('valid', pwd.length >= 6);
    ruleUpper.classList.toggle('valid', /[A-Z]/.test(pwd));
    ruleSymbol.classList.toggle('valid', /[^a-zA-Z0-9]/.test(pwd));
  });

  function validateEmail(email) {
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
  }

  function validateForm() {
    emailError.textContent = '';
    confirmError.textContent = '';
    let valid = true;

    if (!validateEmail(emailInput.value.trim())) {
      emailError.textContent = 'Invalid email address';
      valid = false;
    }

    const pwd = passwordInput.value;
    if (
      pwd.length < 6 ||
      !/[A-Z]/.test(pwd) ||
      !/[^a-zA-Z0-9]/.test(pwd)
    ) {
      alert('Password must be at least 6 characters, contain an uppercase letter, and a symbol.');
      valid = false;
    }

    if (pwd !== confirmPasswordInput.value) {
      confirmError.textContent = "Passwords don't match";
      valid = false;
    }

    if (valid) {
      alert('Registration successful!');
    }
    return valid;
  }
</script>

</body>
</html>
